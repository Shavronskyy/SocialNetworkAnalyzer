@model SocialNetworkAnalyzer.ViewModels.RegisterViewModel
<div class="center-form">

<h2>Реєстрація</h2>
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="Email">Введіть Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label class="login-text" asp-for="Password">Введіть пароль</label><br />
            <input class="login-input" type="text" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label class="login-text" asp-for="ConfirmPassword">Підтвердіть пароль</label><br />
            <input class="login-input" type="text" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group">
            <input type="submit" value="Зареєструвати" class="btn btn-outline-dark" />
        </div>
    </div>
</form>

</div>