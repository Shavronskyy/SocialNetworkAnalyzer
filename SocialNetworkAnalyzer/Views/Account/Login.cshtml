@model SocialNetworkAnalyzer.ViewModels.LoginViewModel
<div class="center-form">

<h2>Авторизація</h2>

<a asp-action="Register" asp-controller="Account">Немає аккаунту?</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label class="login-text" asp-for="Email">Введіть Email</label><br />
            <input class="login-input" type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label class="login-text" asp-for="Password">Введіть пароль</label><br />
            <input class="login-input" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Авторизація" class="btn btn-outline-dark" />
        </div>
    </div>
</form>

</div>