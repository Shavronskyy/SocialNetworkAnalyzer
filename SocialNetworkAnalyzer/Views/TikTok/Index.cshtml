@model SocialAnalyzer.models.TikTokUser;
<div style="width:100%" class="box">
    <div style="float: left">
        <img src="@Model.userImg" class="box-160-280 rounded-circle img-thumbnail" />
    </div>
    <div style="float: left">
        <h1>@Model.userTitle</h1>
        <h5>@Model.userSubtitle</h5>
        <h7>@Model.userDescription</h7>
    </div>
</div>
<div class="box">
    <table>
        <tr>Слідкувачі: @Model.userSumFollowers </tr>
        <tr>Уподобання: @Model.userSumLikes </tr>
        <tr>Слідкування: @Model.userFollowing</tr>
    </table>
</div>
<div class="container">
    <div class="section">
        <h2>Перегляди відео</h2>
        <p>Середні перегляди відео: @Model.userAwgViews</p>
    </div>
    <div class="section">
        <h2>Середні показники на відео</h2>
        <p>Середня кількість вподобаннь на 100 відео: @Model.userAwgViewsToLikes</p>
    </div>
    <div class="section">
        <h2>Вподобання</h2>
        <p>Середні вподобання відео: @Model.userAwgLikes</p>
    </div>
    <div class="section">
        <h2>Коментарі</h2>
        <p>Середня кількість коментарів: @Model.userAwgComments</p>
    </div>
</div>